<Page
    x:Class="DialogServiceWinUI.ContentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:DialogServiceWinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid Margin="50,0,0,80">

        <StackPanel
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Orientation="Vertical">

            <!--  Click Event Handler in the View  -->
            <Button
                Margin="0,20,0,0"
                Padding="10"
                HorizontalAlignment="Stretch"
                Click="MessageBox_Click"
                Content="Message Dialog" />

            <!--  Binding to Command in ViewModel  -->

            <!--
            <Button Content="2-Button Message Dialog"
                    Command="{Binding ViewModel.ConfirmationCommandYesNo}"
                    HorizontalAlignment="Stretch"
                    Padding="10"
                    Margin="0 20 0 0" />
            -->
        </StackPanel>

    </Grid>

</Page>
